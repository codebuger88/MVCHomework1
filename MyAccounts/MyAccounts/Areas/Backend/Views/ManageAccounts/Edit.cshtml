@model MyAccounts.Models.AccountBook
@{
    ViewBag.Title = "修改記帳本";
}

<div class="well form-horizontal">
    @using (Html.BeginForm("Edit", "ManageAccounts"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Categoryyy, htmlAttributes: new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.Categoryyy, (IEnumerable<SelectListItem>) ViewBag.DDLCategory, new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.Categoryyy, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Amounttt, htmlAttributes: new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Amounttt, new {htmlAttributes = new {@class = "form-control", placeholder = "金額"}})
                @Html.ValidationMessageFor(model => model.Amounttt, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Dateee, htmlAttributes: new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Dateee, new {htmlAttributes = new {@class = "form-control datepicker", placeholder = "日期"}})
                @Html.ValidationMessageFor(model => model.Dateee, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Remarkkk, htmlAttributes: new {@class = "col-sm-2 control-label"})
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Remarkkk, new {htmlAttributes = new {@class = "form-control", placeholder = "備註"}})
                @Html.ValidationMessageFor(model => model.Remarkkk, "", new {@class = "text-danger"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/validation/overdate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({
                format: 'yyyy-mm-dd',
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true
            });
        });
    </script>
}
