@model IEnumerable<MyAccounts.Models.AccountsModels>
@{
    ViewBag.Title = "我的記帳本";
}

<div class="well">
    @using (Html.BeginForm("Create", "Accounts", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label for="Categoryyy" class="col-sm-2 control-label">類別</label>
            <div class="col-sm-10">
                <select id="Categoryyy" name="Categoryyy" class="form-control">
                    <option value="" selected>請選擇</option>
                    <option value="1">支出</option>
                    <option value="0">收入</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="Amounttt" class="col-sm-2 control-label">金額</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Amounttt" id="Amounttt" placeholder="金額">
            </div>
        </div>
        <div class="form-group">
            <label for="Dateee" class="col-sm-2 control-label">日期</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="Dateee" id="Dateee" placeholder="日期">
            </div>
        </div>
        <div class="form-group">
            <label for="Remarkkk" class="col-sm-2 control-label">備註</label>
            <div class="col-sm-10">
                <textarea class="form-control" name="Remarkkk" id="Remarkkk"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>

<div class="row">
    <div class="col-md-12">
        這是Partial View<br />
        @Html.Partial("_AccountsPartial", Model)
    </div>

    <div class="col-md-12">
        這是Child Action<br />
        @Html.Action("ChildContent")
    </div>
</div>
