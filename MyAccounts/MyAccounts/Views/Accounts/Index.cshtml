@model MyAccounts.Models.AccountBook
@{
    ViewBag.Title = "我的記帳本";
}
@section styles{
    <style>
        .red {
            color: red;
        }

        .blue {
            color: blue;
        }
    </style>
}

<div class="well">
    @using (Html.BeginForm("Index", "Accounts", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(model => model.Categoryyy, htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(model => model.Categoryyy, (IEnumerable<SelectListItem>)ViewBag.DDLCategory, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Amounttt, htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Amounttt, new { htmlAttributes = new { @class = "form-control", placeholder = "金額" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Dateee, htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.Dateee, new { htmlAttributes = new { @class = "form-control", placeholder = "日期" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Remarkkk, htmlAttributes: new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.Remarkkk, htmlAttributes: new { @class = "form-control", placeholder = "備註" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8 col-sm-4">
                <button type="submit" class="btn btn-default">送出</button>
            </div>
        </div>
    }
</div>

<div class="row">
    @*<div class="col-md-12">
            這是Partial View<br />
            @Html.Partial("_AccountsPartial", Model)
        </div>*@

    <div class="col-md-12">
        這是Child Action<br />
        @Html.Action("ChildContent")
    </div>
</div>
